/* pages/mine/Involved/Involved.wxss */
page{
  background-color: #fff;
}
.order-box{
  width: 100%;
  background-color: #f5f5f5;
  padding: 30rpx;
}

.order-item{
  border-radius: 13rpx;
  width: 100%;
  /* height: 357rpx; */
  background-color: #fff;
  margin-bottom: 30rpx;
}

.item-top{
  width: 100%;
  height: 87rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
}

.item-top .ball-pic{
  width: 37rpx;
  height: 37rpx;
  position: absolute;
  top: 25rpx;
  left: 30rpx;
}

.item-top .member-free{
  width: 71rpx;
  height: 23rpx;
  margin-left: 12rpx;
}

.type{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 22rpx 0 30rpx 86rpx;
}

.item-mid{
  width: 100%;
  height: 152rpx;
  position: relative;
}

.mid-title{
  text-align: center;
  font-size: 28rpx;
  padding: 0rpx 0 10rpx 0;
  color: #333;
}

.mid-time{
  text-align: center;
  font-size: 39rpx;
  padding-bottom: 10rpx;
  color: #222;
}

.item-bottom{
  width: 100%;
  height: 117rpx;
}

.status{
  font-size: 24rpx;
  vertical-align: middle;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  color: #fff;
  background-color: #FF5733;
  font-weight: 500;
  padding: 0rpx 24rpx;
  height: 40rpx;
  font-family: Helvetica Neue, Helvetica, sans-serif;
  margin: 22rpx 34rpx 0 0;
}

.space{
  padding: 22rpx 30rpx 0 30rpx;
  font-size: 27rpx;
}

.adress-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  font-size: 24rpx;
  padding-left: 30rpx;
}

.adress{
  padding: 16rpx 0;
}

.item-distance{
  padding-right: 74rpx;
  padding-top: 18rpx;
}

.item-distance image{
  width: 37rpx;
  height: 37rpx;
  position: absolute;
  top: 12rpx;
  right: 18rpx;
}

.involved{
  width: 85rpx;
  height: 86rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.white-view{
  width: 100%;
  height: 100%;
  background:rgba(255,255,255,0.5);
  position: fixed;
  top: 0;
  left: 0;
}

/* 未参与过 */
.no-data{
  
  width: 100%;
  height: 100%;
  padding: 236rpx 0 0 159rpx;
  background: #fff;
}

.no-data image{
  width: 413rpx;
  height: 271rpx;
}

.no-tip{
  font-size:27rpx;
  font-weight:500;
  color:rgba(153,153,153,1);
  text-align: left;
  padding-left: 82rpx;
}