  color:rgba(103,83,40,1);
  line-height:32rpx;
  text-align: center;
}

.price-right{
  color: #222;
  font-size: 29rpx;
  font-weight: bold;
}

.more-price{
  flex-direction: row;
  justify-content: space-between;
  margin-top: 15rpx;
}

.re-price{
  width:76rpx;
  height:36rpx;
  background:rgba(255,216,0,1);
  border-radius:4px;
  color: #222;
  font-size: 18rpx;
  text-align: center;
  line-height: 36rpx;
  position: absolute;
  left: 0;
  top: 0;
}