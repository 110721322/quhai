}

.more{
  font-size: 29rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
  padding-left: 30rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.more-box{
  width: 100%;
  height: 143rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: row;
}

.more-item{
  width:285rpx;
  height:143rpx;
  background:rgba(255,244,203,1);
  border-radius:13rpx;
  padding: 18rpx 18rpx 13rpx 18rpx;
  margin-right: 30rpx;
}

.more-name{
  color: #333;
