}

.mine-top{
  width: 100%;
  height: 244rpx;
  background:#262626;
  padding-top: 116rpx;
  position: relative;
}

.back{
  width: 42rpx;
  height: 45rpx;
  position: absolute;
  left: 30rpx;
  top: 60rpx;
  z-index: 99;
}

.user-info {
  width: 100%;
  display: flex;
}

.avatar image {
  width: 70rpx;
  height: 70rpx;
  margin-left: 23rpx;
  margin-top: 16rpx;
}

.userinfo {
  display: flex;
  width: 100%;
  height: 128rpx;
}

.userBtn {
  display: flex;
  justify-content: center;
  margin-top: 25rpx;
}

.userinfo-avatar {
  width: 70rpx;
  height: 70rpx;
  margin: 29rpx 18rpx 29rpx 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #F4E7B6;
  margin-left: 28rpx;
  font-size: 31rpx;
  font-weight: bold;
}

.telphone {
  margin-top: 10rpx;
  margin-left: 30rpx;
  color: #F4E7B6;
  font-size: 25rpx;
  font-weight: 400;
}

.time{
  font-size:24rpx;
  font-weight:400;
  color:rgba(244,231,182,1);
  padding-left: 28rpx;
}

.infomation {
  padding-top: 33rpx;
}

.card-title{
  width: 100%;
  height: 105rpx;
  padding: 48rpx 0 0 29rpx;
  font-size:29rpx;
  font-weight:bold;
  color:rgba(134,83,33,1);
}

.renew{
  width: 100%;
  height: 169rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.renew-item{
  width: 209rpx;
  height: 169rpx;
  background:rgba(230,230,230,1);
  background-image: url(http://renxuanwang.com/sel.png);
  background-repeat: no-repeat;
  background-position: 90% 10%;
  background-size: 33rpx 33rpx;
  border-radius:13rpx;
  color: #333;
  position: relative;
}

.renew-sel{
  width: 209rpx;
  height: 169rpx;
  border-radius:13rpx;
  color: #333;
  position: relative;
  
  background-image: url(http://renxuanwang.com/sel2.png);
  background-repeat: no-repeat;
  background-position: 90% 10%;
  background-color: #FFDEB8;
  /* background: url(http://renxuanwang.com/sel2.png)  top right 16px no-repeat, linear-gradient(180deg,rgba(251,248,235,1),rgba(255,222,184,1)); */
  background-size: 33rpx 33rpx; 
  
}

.renew-item image{
  position: absolute;
  top: 13rpx;
  right: 18rpx;
  width: 33rpx;
  height: 33rpx;
}

.date{
  font-size: 27rpx;
  width: 100%;
  height: 84rpx;
  padding: 53rpx 0 0 63rpx;
}

.price{
  font-size: 29rpx;
  width: 100%;
  height: 85rpx;
  padding: 18rpx 0 0 69rpx;
}

.price text{
  font-size: 18rpx;
}

.member-caption{
  width: 100%;
  height: 287rpx;
  padding: 48rpx 34rpx 68rpx 31rpx;
}

.caption-title{
  font-size:27rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  margin-bottom: 18rpx;
}

.caption-detail{
  font-size:21rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  letter-spacing: 2rpx;
}

.btn-box{
  width: 100%;
  height: 101rpx;
  margin-top: 30rpx;
  margin-bottom: 97rpx;
}

.btn-box text{
  font-size:35rpx;
  font-weight:bold;
  color:rgba(255,87,51,1);
}

.btn{
