/* pages/mine/minefx/minefx.wxss */
.top-box{
  width: 100%;
  
  background-color: #fff;
}

.title-box,.money-box{
  display: flex;
  flex-direction: row;
}

.title-box{
  font-size: 28rpx;
  color:rgba(0,0,0,1);
  font-weight: 500;
}

.title-box view{
  width: 50%;
  height: 80rpx;
  padding-top: 26rpx;
  text-align: center;
  font-weight: 500;
}

.money-box view{
  width: 50%;
  height: 94rpx;
  padding-top: 26rpx;
  text-align: center;
  font-weight: 600;
}

.money-box{
  font-weight:500;
  color:rgba(255,87,51,1);
  font-size: 50rpx;
}

.top-btn{
  width: 290rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background:rgba(255,87,51,1);
  line-height: 60rpx;
  margin: 26rpx auto 26rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  
}

.top-tip{
  font-size: 22rpx;
  color:rgba(51,51,51,1);
  padding: 0 76rpx 26rpx 28rpx;
}


.mid-box{
  /* margin-top: 30rpx; */
  background-color: #fff;
  color: #222;
  
}

.mid-title{
  font-size: 26rpx;
}

.mid-title text{
  font-size: 22rpx;
  color: #999;
  padding-left: 18rpx;
}

.list-item{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 108rpx;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #333;
}

.list-item span{
  position: absolute;
  top: 34rpx;
  right: 0;
  color: #FF5733;
  font-size: 24rpx;
}

.bottom-box{
  background-color: #fff;
  
  padding: 36rpx 42rpx 103rpx 30rpx;
  margin-top: 30rpx;
}

.bottom-t{
  color: #333;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.show-btn{
  color: #fff;
  font-size: 36rpx;
  width:560rpx;
  height:112rpx;
  background:rgba(255,87,51,1);
  border-radius:56px;
  margin: 0 auto;
  text-align: center;
  line-height: 112rpx;
  margin-top: 102rpx;
}

.main-top{
  position: fixed;
  left: 0rpx;
  top: 292rpx;
  z-index: 101;
  width: 100%;
}

.code-content{
  width: 100%;
  background-color: #fff;
  height: 760rpx;
}

.code-image{
  /* width: 320rpx;
  height: 320rpx; */
  position: absolute;
  left: 0rpx;
  top: 122rpx;
}

.blackmask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 100;
  position: fixed;
  top: 0;
}

.copy{
  height: 102rpx;
  background:rgba(255,255,255,1);
  border-radius:51rpx;
  margin-top: 64rpx;
  color: #222;
  font-weight: bold;
  font-size: 36rpx;
}